<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tony.log.dao.mapper.SysOperLogMapper">

    <resultMap type="com.tony.log.dao.entity.SysOperLog" id="SysOperLogResult">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="businessType" column="business_type"/>
        <result property="method" column="method"/>
        <result property="requestMethod" column="request_method"/>
        <result property="operatorType" column="operator_type"/>
        <result property="opUser" column="op_user"/>
        <result property="deptName" column="dept_name"/>
        <result property="operUrl" column="oper_url"/>
        <result property="operIp" column="oper_ip"/>
        <result property="operLocation" column="oper_location"/>
        <result property="operParam" column="oper_param"/>
        <result property="jsonResult" column="json_result"/>
        <result property="status" column="status"/>
        <result property="errorMsg" column="error_msg"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <sql id="selectOperLogVo">
        select id,
               title,
               business_type,
               method,
               request_method,
               operator_type,
               op_user,
               dept_name,
               oper_url,
               oper_ip,
               oper_location,
               oper_param,
               json_result,
               status,
               error_msg,
               updated_at,
               created_at
        from sys_oper_log
    </sql>

    <insert id="insertOperlog" parameterType="com.tony.log.dao.entity.SysOperLog">
        insert into sys_oper_log(title, business_type, method, request_method, operator_type, op_user, dept_name,
                                 oper_url, oper_ip, oper_location, oper_param, json_result, status, error_msg)
        values (#{title}, #{businessType}, #{method}, #{requestMethod}, #{operatorType}, #{opUser}, #{deptName},
                #{operUrl}, #{operIp}, #{operLocation}, #{operParam}, #{jsonResult}, #{status}, #{errorMsg})
    </insert>

    <select id="selectOperLogList" parameterType="com.tony.log.dao.entity.SysOperLog" resultMap="SysOperLogResult">
        <include refid="selectOperLogVo"/>
        <where>
            <if test="title != null and title != ''">
                AND title like concat('%', #{title}, '%')
            </if>
            <if test="businessType != null">
                AND business_type = #{businessType}
            </if>
            <if test="businessTypes != null and businessTypes.length > 0">
                AND business_type in
                <foreach collection="businessTypes" item="businessType" open="(" separator="," close=")">
                    #{businessType}
                </foreach>
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="opUser != null and opUser != ''">
                AND op_user like concat('%', #{opUser}, '%')
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                and date_format(updated_at,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                and date_format(updated_at,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
    </select>

    <delete id="deleteOperLogByIds" parameterType="String">
        delete from sys_oper_log where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectOperLogById" parameterType="Long" resultMap="SysOperLogResult">
        <include refid="selectOperLogVo"/>
        where id = #{id}
    </select>

    <update id="cleanOperLog">
        truncate table sys_oper_log
    </update>

</mapper> 